#include <iostream>
#include <math.h>

using namespace std;
 
int main() {
    
    double A, B, C, trian, cir, tra, quad, ret;
    
    
    scanf("%lf" "%lf" "%lf", &A, &B, &C);
    
    trian = A*C/2.0;
    cir = 3.14159*pow(C,2.0);
    tra = (A+B)*C/2.0;
    quad = B*B;
    ret = A*B;
    
    printf("TRIANGULO: %.3lf\nCIRCULO: %.3lf\nTRAPEZIO: %.3lf\nQUADRADO: %.3lf\nRETANGULO: %.3lf\n", trian, cir, tra, quad, ret);
    
    return 0;
}
